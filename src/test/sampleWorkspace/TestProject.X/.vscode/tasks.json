{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MPLABX Clean",
            "type": "mplabx",
            "task": "clean",
            "projectFolder": "${workspaceFolder}",
            "args": [
                "CONF=\"default\"",
            ],
            "problemMatcher": [
                {
                    "base": "$xc",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                }
            ]
        },
        {
            "label": "MPLABX Build",
            "type": "mplabx",
            "task": "build",
            "projectFolder": "${workspaceFolder}",
            "args": [
                "CONF=\"default\"",
            ],
            "problemMatcher": [
                {
                    "base": "$xc",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}